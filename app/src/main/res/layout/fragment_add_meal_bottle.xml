<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    tools:context=".ui.main.view.AddMealBottleFragment">

    <!-- TODO: Update blank fragment layout -->

    <com.john.waveview.WaveView
        android:id="@+id/wvMilk"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:background="@color/white"
        app:above_wave_color="@color/white"
        app:blow_wave_color="@color/picton_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:progress="0"
        app:wave_height="little"
        app:wave_hz="normal"
        app:wave_length="middle" />

    <View
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:background="@drawable/ic_milk_bottle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/skMilk"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:progress="0"
        android:rotation="270"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>