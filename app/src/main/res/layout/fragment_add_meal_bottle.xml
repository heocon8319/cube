<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    tools:context=".ui.main.view.AddMealBottleFragment">

    <!-- TODO: Update blank fragment layout -->

    <com.brickmate.cube.ui.custom.waveview.WaveView
        android:id="@+id/wvMilk"
        android:layout_width="200dp"
        android:layout_height="@dimen/milt_height"
        android:background="@color/transparent"
        app:above_wave_color="@color/picton_blue"
        app:blow_wave_color="@color/picton_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:background="@drawable/ic_milk_bottle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/skMilk"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_marginTop="100dp"
        android:progress="30"
        android:rotation="270"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>