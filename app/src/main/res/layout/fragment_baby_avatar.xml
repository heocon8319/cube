<?xml version="1.0" encoding="utf-8"?><!-- TODO: Update blank fragment layout -->


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.view.BabyAvatarFragment">

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_baby_avatar_full"
        android:layout_marginTop="@dimen/height_150"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivBabyAvatar"
        android:layout_width="@dimen/height_170"
        android:layout_height="@dimen/height_170"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/height_70"
        app:layout_constraintBottom_toBottomOf="@id/ivBackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivBackground" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/Title_Medium_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/screen_baby_avatar_text_avatar"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/ivBackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>