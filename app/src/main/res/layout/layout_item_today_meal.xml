<?xml version="1.0" encoding="utf-8"?><!-- TODO: Update blank fragment layout -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_view_height"
    android:layout_gravity="center"
    android:elevation="@dimen/margin_small"
    android:layout_marginVertical="@dimen/margin_small"
    app:cardCornerRadius="@dimen/card_view_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clToday"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_today_meal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTodayML"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_normal"
            android:background="@drawable/bg_today_diet_meal"
            android:padding="@dimen/margin_tiny"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvTodayML"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/screen_today_text_ml"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />


            <ImageView
                android:id="@+id/ivTodayML"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_today_empty_meal"
                app:layout_constraintBottom_toTopOf="@id/tvTodayML"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/bg_today_title_meal"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                style="@style/title_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_tiny"
                android:text="@string/screen_today_text_ingredient"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTodayIngredient"
            style="@style/title_medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:text="소고기 양배추 죽"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="@dimen/today_note_size"
            app:layout_constraintBottom_toTopOf="@id/llTodayLock"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintWidth_percent="0.7" />

        <LinearLayout
            android:id="@+id/llTodayLock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:src="@drawable/ic_today_clock" />

            <TextView
                android:id="@+id/tvTodayClock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3:00 AM"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="@dimen/today_note_size" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>