<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_today_note">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/glLeft"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvNote1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/jungle_green"
            android:textSize="@dimen/today_note_size"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNote2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/jungle_green"
            android:textSize="@dimen/today_note_size"
            app:layout_constraintLeft_toLeftOf="@id/tvNote1"
            app:layout_constraintTop_toBottomOf="@+id/tvNote1" />

        <TextView
            android:id="@+id/tvNote3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/jungle_green"
            android:textSize="@dimen/today_note_size"
            app:layout_constraintLeft_toLeftOf="@id/tvNote1"
            app:layout_constraintTop_toBottomOf="@id/tvNote2" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>