<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_normal"
    tools:context=".ui.main.view.TodayMeasureHistoryFragment">


    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/ivSection1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:src="@drawable/ic_dialog_height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/title_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:text="@string/dialog_measure_history_text_height"
        android:textColor="@color/black"
        android:textSize="@dimen/title_section_size"
        app:layout_constraintBottom_toBottomOf="@id/ivSection1"
        app:layout_constraintLeft_toRightOf="@id/ivSection1"
        app:layout_constraintTop_toTopOf="@id/ivSection1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/ivSection1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivSection1"
        app:layout_constraintWidth_percent="0.5">

        <ImageView
            android:id="@+id/ivHeightMinus"
            android:layout_width="@dimen/icon_add_minus_height"
            android:layout_height="@dimen/icon_add_minus_height"
            android:layout_weight="1"
            android:src="@drawable/ic_today_minus" />

        <TextView
            android:id="@+id/tvHeight"
            style="@style/title_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="9 kg"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/ivHeightAdd"
            android:layout_width="@dimen/icon_add_minus_height"
            android:layout_height="@dimen/icon_add_minus_height"
            android:layout_weight="1"
            android:src="@drawable/ic_today_add" />
    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lcHeight"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_chart_height"
        android:layout_marginTop="@dimen/margin_tiny"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivSection1" />

    <ImageView
        android:id="@+id/ivSection2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:src="@drawable/ic_dialog_weight"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lcHeight" />

    <TextView
        style="@style/title_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:text="@string/dialog_measure_history_text_weight"
        android:textColor="@color/black"
        android:textSize="@dimen/title_section_size"
        app:layout_constraintBottom_toBottomOf="@id/ivSection2"
        app:layout_constraintLeft_toRightOf="@id/ivSection2"
        app:layout_constraintTop_toTopOf="@id/ivSection2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/ivSection2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivSection2"
        app:layout_constraintWidth_percent="0.5">

        <ImageView
            android:id="@+id/ivWeightMinus"
            android:layout_width="@dimen/icon_add_minus_height"
            android:layout_height="@dimen/icon_add_minus_height"
            android:layout_weight="1"
            android:src="@drawable/ic_today_minus" />

        <TextView
            android:id="@+id/tvWeight"
            style="@style/title_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="80 cm"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/ivWeightAdd"
            android:layout_width="@dimen/icon_add_minus_height"
            android:layout_height="@dimen/icon_add_minus_height"
            android:layout_weight="1"
            android:src="@drawable/ic_today_add" />
    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lcWeight"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_chart_height"
        android:layout_marginTop="@dimen/margin_tiny"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivSection2" />

</androidx.constraintlayout.widget.ConstraintLayout>