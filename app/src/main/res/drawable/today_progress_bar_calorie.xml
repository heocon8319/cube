<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dip" /> <!--optional-->
            <gradient
                android:angle="270"
                android:endColor="@color/bg_process_bar"
                android:startColor="@color/bg_process_bar" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dip" /> <!--optional-->
                <gradient
                    android:angle="270"
                    android:endColor="@color/fire_bush"
                    android:startColor="@color/fire_bush" />
            </shape>
        </clip>
    </item>
</layer-list>