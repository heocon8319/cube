<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SingleRowCalendar">
        <attr name="pastDaysCount" format="integer" />
        <attr name="futureDaysCount" format="integer" />
        <attr name="includeCurrentDate" format="boolean" />
        <attr name="initialPositionIndex" format="integer" />
        <attr name="initialCurrentDate" format="boolean" />
        <attr name="multiSelection" format="boolean" />
        <attr name="deselection" format="boolean" />
        <attr name="longPress" format="boolean" />
    </declare-styleable>


    <attr name="cropImageStyle" format="reference" />
    <declare-styleable name="CropImageView">
        <attr name="highlightColor" format="reference|color" />
        <attr name="showThirds" format="boolean" />
        <attr name="showCircle" format="boolean" />
        <attr name="showHandles">
            <enum name="changing" value="0" />
            <enum name="always" value="1" />
            <enum name="never" value="2" />
        </attr>
    </declare-styleable>


    <declare-styleable name="CustomCalendarView">
        <attr name="dateFormat" format="string"/>
    </declare-styleable>


    <declare-styleable name="WaveView">
        <attr name="above_wave_color" format="color"/>
        <attr name="blow_wave_color" format="color"/>
        <attr name="progress" format="integer"/>
        <attr name="wave_length" format="enum">
            <enum name="large" value="1"/>
            <enum name="middle" value="2"/>
            <enum name="little" value="3"/>
        </attr>
        <attr name="wave_height" format="enum">
            <enum name="large" value="1"/>
            <enum name="middle" value="2"/>
            <enum name="little" value="3"/>
        </attr>
        <attr name="wave_hz" format="enum">
            <enum name="fast" value="1"/>
            <enum name="normal" value="2"/>
            <enum name="slow" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="Themes">
        <attr name="waveViewStyle" format="reference"/>
    </declare-styleable>

</resources>